<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="bit.data.dao.LectureDao">
    <!-- 강의 등록 -->
    <insert id="insertLecture" parameterType="lectureDto">
        insert into lecture (lecnum, teaname, lecname, lectypea, lectypeb)
        values (null, #{teaname}, #{lecname}, #{lectypea}, #{lectypeb})
    </insert>
    <!-- 강의 총 개수 출력 -->
    <select id="getTotalLectureCount" parameterType="Map" resultType="int">
        select count(*) from lecture
    </select>
    <!-- 강의 목록 출력 -->
    <select id="getLectureList" parameterType="Map" resultType="lectureDto">
        select * from lecture order by lecnum desc
    </select>
    <!--강의 목록 전체 출력  과목 이름 순-->
     <select id="getAllLecture" resultType="LectureDto">
		select * from lecture order by lectypea asc
	</select>
	
	<!-- 강의 카테고리 1번(국,영,수) 나누기 -->
	<select id="selectByCategori" parameterType="String" resultType="LectureDto">
		select * from lecture where lectypea = #{lectypea}
	</select>
	
	<!-- 강의 카테고리 2번(과목에서) 나누기 -->
	<select id="selectByCategori2" parameterType="String" resultType="LectureDto">
		select * from lecture where lectypeb = #{lectypeb}
	</select>
	
	<!--  강의 번호 출력-> 강의 상세보기 하기 위한 sql문 -->
	<select id="selectByNum" parameterType="String" resultType="LectureDto">
		SELECT * from lecture, lecdetail where lecture.lecnum = lecdetail.lecnum;
	</select>
	
	<!-- 	  강의 번호 출력-> 강의 상세보기 하기 위한 sql문 
	<select id="selectByNum" parameterType="int" resultType="LectureDto">
		select * from lecture where lecnum = #{lecnum}
	</select> -->
	
</mapper>
